rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Admin Check: Update list as needed or use Custom Claims
    function isAdmin() {
      return request.auth.token.email in ['jamiekwok416@gmail.com'];
    }

    // --- Users Collection ---
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);
      
      // ðŸ”’ AI Quota Tracking (V1.2.3)
      match /usage/ai_quota {
        allow read: if isOwner(userId);
        // User needs to update this to increment usage
        // Future improvement: Validate 'count' only increases
        allow write: if isOwner(userId);
      }
    }

    // --- System Analytics (V1.2.3) ---
    match /system/ai_analytics {
      // Only Admin can view global usage
      allow read: if isAdmin();
      
      // All users need to increment the counters
      // We allow update but NOT delete/create
      allow update: if isAuthenticated();
      allow create, delete: if isAdmin();
    }
    
    // --- Trips Collection ---
    // --- Trips Collection (Updated V1.3.0) ---
    match /trips/{tripId} {
       
       function isTripOwnerOrShared() {
         return isAuthenticated() && (
           resource.data.ownerId == request.auth.uid || 
           (resource.data.keys().hasAll(['sharedWith']) && request.auth.uid in resource.data.sharedWith)
         );
       }

       // V1.3.0 Social: Allow authenticated users to update counters on public trips
       function isSocialInteraction() {
         return isAuthenticated() 
           && resource.data.isPublic == true
           && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'likedBy', 'forks', 'views', 'lastUpdate']);
       }

       allow read: if resource.data.isPublic == true || isTripOwnerOrShared();
       
       // Create: Must assign self as owner
       allow create: if isAuthenticated() && request.resource.data.ownerId == request.auth.uid;
       
       // Update: Full access for owner/shared, specific fields for social
       allow update: if isTripOwnerOrShared() || isSocialInteraction();
       
       // Delete: Only Owner
       allow delete: if isAuthenticated() && resource.data.ownerId == request.auth.uid;
    }
    
    // --- Global Settings ---
    match /settings/{docId} {
      allow read: if true; 
      allow write: if isAdmin();
    }

    // --- Metadata (V1.8.2+) ---
    match /metadata/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Feedback ---
    match /feedback/{docId} {
      allow read: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated();
      allow update: if isAdmin();
    }

    // --- Default Deny ---
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
